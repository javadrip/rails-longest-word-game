<h1>New game</h1>

<div class="d-flex">
  <% @letters.each do |letter| %>
  <p style="width:50px; height: 50px;" class="mx-2 d-flex align-items-center justify-content-center bg-primary text-white">
    <%= letter %>
  </p>
  <% end %>
</div>

<p>What is the longest word you can form?</p>
<form action="/score" method="post" data-turbo="false">
  <input type="text" name="guess">
  <input type="submit" value="Submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters_array, @letters %>
</form>
